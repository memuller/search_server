- target = @document.new? ? [@document] : [@document, :url => site_document_path, :action => :put]
= form_for *target do |f|
  -if @document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@document.errors.count, "error")} prohibited this document from being saved:"
      %ul
        - @document.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :uri
    = f.text_field :uri
  .actions
    = f.submit 'Save'
