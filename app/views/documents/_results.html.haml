#results
  %table
    %tr
      %th Title
      %th Uri
      %th
      %th

    - @documents.each do |document|
      %tr
        %td= link_to document.title, site_document_path(document.site.slug,document.id.to_s)
        %td= link_to document.uri, document.uri
        %td= link_to 'Edit', edit_site_document_path(document.site.slug,document.id.to_s)
        %td= link_to 'Destroy', site_document_path(document.site.slug,document.id.to_s), :confirm => 'Are you sure?', :method => :delete

  %br

  = paginate @documents